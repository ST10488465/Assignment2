<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/txtQuestions"
        android:layout_width="345dp"
        android:layout_height="129dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtResults"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTrue"
        android:layout_width="112dp"
        android:layout_height="87dp"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="52dp"
        android:text="True"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFalse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFalse"
        android:layout_width="109dp"
        android:layout_height="86dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="63dp"
        android:text="False"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="97dp"
        android:layout_height="59dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="153dp"
        android:text="Next"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTrue"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestions" />

    <TextView
        android:id="@+id/txtResults"
        android:layout_width="108dp"
        android:layout_height="36dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="167dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestions" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="138dp"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="138dp"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestions"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="138dp"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestions"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />
</androidx.constraintlayout.widget.ConstraintLayout>